//------------------------------------------ footer
footer.footer

  //-------------------------- top
  .footer__top(class={footer__top_opacityOne: currentUrl === '/blog'})

    .container.container-footer-top
      //-------left
      .footer__left

        .footer__left-goal Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool.
      //-------center
      .footer__center

        .footer__center-links

          ul.links-nav
            each item in linksFooter
              li.links-nav__item
                a.links-nav__link(href=item[1]) #{item[0]}

        .footer__center-icons

          ul.socials
            each item in socials
              li.socials__item
                a(href=`${item[1]}`).socials__link
                  +icon(`${item[0]}`, 'socials__link-icon socials__link-icon_white-hover')
      //-------right
      .footer__right
        .footer__right-quote Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает, где вы живете.
        .footer__right-person - Martin Golding

  //------------------------- bottom
  .footer__bottom(class={footer__top_opacityOne: currentUrl === '/blog'})

    .container.container-footer-bottom
      .signature
        .signature__auth-name &copy; Владимир Астахов
        .signature__vertical-bar |
        .signature__info Создано с любовью в LoftSchool
        .signature__vertical-bar |
        .signature__year 2016